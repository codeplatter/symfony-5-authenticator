{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    
    {% block stylesheets %}

    {# <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    /> #}
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    {% endblock %}
  </head>

 
  <body>
  <main>
  <header class="p-3 bg-dark text-white">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <a href="{{ path('index') }}" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
          Symfony Authenticator
        </a>

        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <li><a href="{{ path('index') }}" class="nav-link px-2 text-white">Home</a></li>
          {% if is_granted('IS_AUTHENTICATED_FULLY') %}
          <li><a href="{{ path('member_dashboard') }}" class="nav-link px-2 text-white">Dashboard</a></li>
          {% endif %}
        </ul>

        <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
          <input type="search" class="form-control form-control-dark" placeholder="Search..." aria-label="Search">
        </form>

        <div class="text-end">
          {% if is_granted('IS_AUTHENTICATED_FULLY') %}
          <a class="btn btn-outline-light me-2" href="{{ path('app_logout') }}">Logout</a>
          {% endif %}
          {% if is_granted('IS_ANONYMOUS') %}
          <a class="btn btn-outline-light me-2" href="{{ path('app_login') }}">Login</a>
          <a class="btn btn-warning" href="{{ path('registration') }}">Register</a>
          {% endif %}
        </div>
      </div>
    </div>
  </header>




  {% block body %}
  {% endblock %} 




  </main>
  
  



  {% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  {% endblock %}
  </body>
</html>